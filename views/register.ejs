<%- include("partials/header") %>
<h1 class="row justify-content-center text-dark">Sign Up</h1>
<div class="row justify-content-center  ">
    <form action="/register" method="POST" autocomplete="on">
        <div class=" container form-row">
            <div class="form-group col-md-6">
                <label for="Name">Name:</label>
                <input type="text" class="form-control" placeholder="Name" name="name" id="Name" required autofocus>
            </div>
            <div class="form-group col-md-6">
                <label for="Email">Email:</label>
                <input type="email" class="form-control" placeholder="Email" name="email" id="Email" required>
            </div>
            <div class="form-group col-md-6 ">
                <label for="password">Password:</label>
                <input type="password" class="form-control" placeholder="Password" name="password" id="password"
                    required>
            </div>
            <div class="form-group col-md-6">
                <label for="Phone Number">Mobile Number:</label>
                <input type="tel" class="form-control" pattern="[0-9]{10}" name="number" id="Number" required>
            </div>
            <div class="form-group col-md-6">
                <label for="Pin-Code">Pin-Code:</label>
                <input type="tel" class="form-control" pattern="[0-9]{6}" name="pincode" id="Pin-Code" required>
            </div>
            
            <div class="form-group col-12">
                <label for="Address">Address:</label>
                <input type="text" class="form-control input-lg" placeholder="Address" name="address" id="Address" required>
            </div>
        </div>
        <div class="row">
            <div class="col-6"><button type="reset" class=" btn btn-danger">Reset</button></div>
            <div class="col-6"><button type="submit" class=" btn btn-primary text-right">Submit</button></div>
        </div>
    </form>
</div>

<%- include("partials/footer") %>