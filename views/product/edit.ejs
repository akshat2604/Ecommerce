<%- include("../partials/header") %>

<div class="container">
    <div class="row justify-content-center  ">
        <form action="/product/<%=data.product.id%>/edit?_method=PUT" method="POST">
            <div class="form-group">
                <label for="Type">Type:</label>
                <input type="text" class="form-control" value="<%=data.product.Type%>" name="type" id="Type" required>
            </div>
            <div class="form-group">
                <label for="image">Image:</label>
                <input type="url" class="form-control" value="<%=data.product.image%>" name="image" id="image" required>
            </div>
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" value="<%=data.product.name%>" name="name" id="Name" required>
            </div>
            <div class="form-group">
                <label for="Quantity">Quantity:</label>
                <input type="number" class="form-control" value="<%=data.product.Quantity%>" name="quantity"
                    id="Quantity" min=1 required>
            </div>
            <div class="form-group">
                <label for="Cost">Cost:</label>
                <input type="number" class="form-control" value="<%=data.product.Cost%>" name="cost" id="Cost" min=1
                    required>
            </div>
            <div class="row">
                <div class="col-6"><button type="submit" class=" btn btn-primary text-right">Submit</button></div>
            </div>

        </form>
    </div>
    <a href="back">Go Back</a>
</div>
<%- include("../partials/footer") %>