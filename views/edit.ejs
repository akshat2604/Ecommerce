<%- include("partials/header") %>
<h1 class="row justify-content-center ">Edit</h1>
<div class="row justify-content-center  ">
    <form action="/edit?_method=PUT" method="POST" autocomplete="on">
        <div class="form-group">
            <label for="Name">Name:</label>
            <input type="text" class="form-control" value="<%=currentUser.Name%>" name="name" id="Name" required>
        </div>
        <div class="form-group">
            <label for="Email">Email:</label>
            <input type="text" class="form-control" value="<%=currentUser.email%>" name="email" id="Email" required>
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" class="form-control" placeholder="New Password" name="password" id="password"
                required>
        </div>
        <div class="form-group">
            <label for="Phone Number">Number:</label>
            <input type="tel" class="form-control" pattern="[0-9]{10}" value="<%=currentUser.phone_number%>" name="number"
                id="Number" required>
        </div>
        <div class="form-group">
            <label for="Pin-Code">Pin-Code:</label>
            <input type="tel" class="form-control" pattern="[0-9]{6}" value="<%=currentUser.pincode%>" name="pincode"
                id="Pin-Code" required>
        </div>
        <div class="form-group">
            <label for="Address">Address:</label>
            <input type="text" class="form-control" value="<%=currentUser.address%>" name="address" id="Address" required>
        </div>
        <div class="row">
            <div class="col-6"><button type="submit" class=" btn btn-primary text-right">Submit</button></div>
        </div>
    </form>
</div>

<%- include("partials/footer") %>